#include <iostream>
int main()
{
  int scores[]{84,92,76,81,56};
  int numStudents = 5;
  int maxScore = 0; //keep track of largest score
  for (int student = 0; student < numStudents; ++student)
  {
    if scores[student] > maxScore)
    {
      maxScore = scores[student];
    }
  }
  std::cout << "the best score was " << maxScore << '\n';
}
